<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/customName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="칵테일 이름" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"/>

            <Button
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Image" />

            <EditText
                android:id="@+id/customContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="내용"
                android:inputType="textMultiLine"
                android:lines="10" />
        </LinearLayout>

        <EditText
            android:id="@+id/customMainAlcohol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Main Alcohol"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/customTaste"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="칵테일 당도(1~5)" />

            <EditText
                android:id="@+id/customAlcohol"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="칵테일 알코올(1~5)" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/customGarnish"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="칵테일 장식(고명)" />

            <EditText
                android:id="@+id/customTech"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="칵테일 기술" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/customGlass"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="칵테일 잔 이름" />

            <EditText
                android:id="@+id/customColor"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="칵테일 색깔" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/customIngredient"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="재료1" />

            <EditText
                android:id="@+id/customIngredient2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="재료2" />

            <EditText
                android:id="@+id/customIngredient3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="재료3" />

            <EditText
                android:id="@+id/customIngredient4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="재료4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/customIngredient5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="재료5" />

            <EditText
                android:id="@+id/customIngredient6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="재료6" />

            <EditText
                android:id="@+id/customIngredient7"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="재료7" />

            <EditText
                android:id="@+id/customTag"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Tag"/>



        </LinearLayout>


        <EditText
            android:id="@+id/customVideoLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Youtube Link" />

        <Button
            android:id="@+id/addCustombtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="check" />
    </LinearLayout>

</ScrollView>
