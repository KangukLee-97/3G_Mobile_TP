<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerRecipe"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bar_background">

    <TextView
        android:id="@+id/titleget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tasteeget"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/alcoholget"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/techget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/glassget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/colorget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/garnishget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/Mainget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:textSize="20dp"/>
    </LinearLayout>


        <ImageView
            android:id="@+id/imageget"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </LinearLayout>


</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dark_background">
    <TextView
        android:id="@+id/contentget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/ingredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:textSize="10dp"/>

    <ListView
        android:id="@+id/ingredList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/linkget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:textSize="10dp"/>

</LinearLayout>

</LinearLayout>
    <include layout="@layout/drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>